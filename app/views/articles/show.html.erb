<h2 align="center">Title: <%= @article1.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <% if @article1.user %>
        <ul class="listing">
            <div class="row center">
                <div class="col-md-4 col-md-offset-4">
                    <li>Created by:</li>
                    <li><%= link_to gravatar_for(@article1.user), user_path(@article1.user) %></li>
                    <li class="article-title">
                        <%= link_to @article1.user.username, user_path(@article1.user) %>
                    </li>
                    <li><small><%= pluralize(@article1.user.articles.count, "article") if @article1.user.articles %></small></li>
                </div>
            </div>
        </ul>
    <% end %>
    <h4 class="center description"><strong>Description: </strong></h4>
    <%= simple_format(@article1.description) %>
    <div class="article-actions">
        <%= link_to "edit this article" , edit_article_path(@article1), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete this article", article_path(@article1), method: :delete, data: 
                                            {confirm: "are you sure want to delete this article?"}, 
                                            class: "btn btn-xs btn-danger"%>
        <%= link_to 'back to article listing', articles_path, class: "btn btn-xs btn-success" %>
    </div>
</div>
